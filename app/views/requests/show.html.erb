<% upvote_msg = @request.upvoted_by?(current_user) ? "I don't want this" : "I too want this" %>
<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title"><%= @request.name %>
          <div class="pull-right"><%= @request.from_language.name %> To <%= @request.to_language.name %></div>
          </div>
        </div>
        <div class="panel-body">
          <p>Project URL - <%= @request.url %></p>
          <hr />
          <%= @request.description %>
        </div>
        <div class="panel-footer">
          <%= @request.upvotes.count %> people want this
          &nbsp; | &nbsp;
            <%= link_to upvote_msg, upvote_request_path(@request), data: {allow: user_logged_in?}, class: 'upvote-btn' %>
          <div class="pull-right">
            <%= link_to 'Edit', edit_request_path(@request) %> |
            <%= link_to 'Back', requests_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
