<% upvote_msg = @request.upvoted_by?(current_user) ? "I don't want this" : "I too want this" %>
<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title"><%= @request.name %>
          <div class="pull-right"><%= @request.from_language.name %> To <%= @request.to_language.name %></div>
          </div>
        </div>
        <div class="panel-body">
          <p><i class="fa fa-external-link"></i> <a href=<%= @request.url %> class="link"><%= @request.url %></a></p>
          <hr />
          <%= @request.description %>
        </div>
        <div class="panel-footer">
          <span id="upvotes-count"><%= @request.upvotes.count %></span> people want this
          &nbsp; | &nbsp;
            <%= link_to upvote_msg, upvote_request_path(@request), data: {allow: user_logged_in?}, class: 'upvote-btn link' %>
          <div class="pull-right">
            <%= link_to 'Edit', edit_request_path(@request), class: 'link' %> |
            <%= link_to 'Back', requests_path, class: 'link' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
